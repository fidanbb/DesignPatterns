@model DesignPattern.Mediator.MediatorPattern.Results.UpdateProductByIDQueryResult
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    <form method="post">
        <input type="text" hidden asp-for="ProductID" class="form-control" />
        <br />
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Product Price</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Product Stock Type</label>
        <input type="text" asp-for="ProductStockType" class="form-control" />
        <br />
        <label>Product Stock Count</label>
        <input type="text" asp-for="ProductStock" class="form-control" />
        <br />
        <label>Product Category</label>
        <input type="text" asp-for="ProductCategory" class="form-control" />
        <br />
        <button class="btn btn-primary">Update Product</button>

    </form>
</div>