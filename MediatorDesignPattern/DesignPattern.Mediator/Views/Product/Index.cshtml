﻿@using DesignPattern.Mediator.MediatorPattern.Results
@model List<GetAllProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock count</th>
            <th>Stock type</th>
            <th>Category</th>
            <th>Delete</th>
            <th>Update</th>
            <th>Details</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductStockType</td>
                <td>@item.ProductCategory</td>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Delete</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Update</a></td>
                <td><a href="/Product/GetProduct/@item.ProductID" class="btn btn-outline-dark">Details</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct/" class="btn btn-outline-info">Add New Product</a>
</div>