@model List<DesingPattern.Facade.DAL.Customer>
@{
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<h2>Customer List</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Customer Name</th>
        <th>Customer Surname</th>
        <th>City</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerID</td>
            <td>@item.CustomerName</td>
            <td>@item.CustomerSurname</td>
            <td>@item.CustomerCity</td>
        </tr>
    }
</table>
<a href="/Customer/AddNewCustomer" class="btn btn-primary">Add New Customer</a>